{
  "name": "server",
  "version": "1.0.0",
  "description": "backend for ghotden",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "nodejs server.js",
    "server": "nodemon server.js",
    "elec-launch": "electron ./client",
    "elec-app": "concurrently \"npm run server\" \"npm run client\" \"electron ./client\"",
    "elec-build": "npm preelectron-pack --prefix client && npm electron-pack --prefix client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Sai Sharan Tangeda",
  "license": "MIT",
  "dependencies": {
    "archiver": "^3.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "crypto": "^1.0.1",
    "elasticsearch": "^15.4.1",
    "express": "^4.16.4",
    "get-json": "^1.0.1",
    "gravatar": "^1.8.0",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.4.0",
    "method-override": "^3.0.0",
    "mongodb": "^3.2.6",
    "mongoose": "^5.4.11",
    "multer": "^1.4.1",
    "multer-gridfs-storage": "^3.2.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "electron": "^5.0.2",
    "nodemon": "^1.18.10"
  },
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  }
}
